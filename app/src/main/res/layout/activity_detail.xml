<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.adruijter.koffiebestelapp.DetailActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details van het record"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="@color/oranje"
        android:textSize="24sp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/firstnameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="voornaam: "
        android:textAppearance="?android:textAppearanceLarge"
        android:background="@color/licht_oranje"
        android:textSize="24dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstnameValue"
        android:hint=""
        android:inputType="textMultiLine" />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/infixLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tussenvoegsel"
            android:textAppearance="?android:textAppearanceLarge"
            android:background="@color/licht_oranje"
            android:textSize="24dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/infixValue"
            android:hint=""
            android:inputType="textMultiLine" />

    </LinearLayout>


</LinearLayout>
